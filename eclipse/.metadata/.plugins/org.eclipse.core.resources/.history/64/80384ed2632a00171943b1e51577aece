package leetcode;

public class LeetCode3 {
	public int lengthOfLongestSubstring(String s) {
		int[] arr = new int[255];
		for(int i = 0;i < 255;i++){
			arr[i] = -1;
		}
		int max = 1;
		for(int i = 0;i < s.length();i++){
			char c = s.charAt(i);
			if(arr[c] == -1){
				arr[c] = i;
			}else{
				int temp = i-arr[c]+1;
				if(max < temp){
					max = temp;
				}
			}
		}
        return max;
    }
}
